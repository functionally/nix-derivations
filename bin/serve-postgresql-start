#!/usr/bin/env nix-shell
#!nix-shell -I https://github.com/NixOS/nixpkgs/archive/b62c50ce5d3b6053f6f4afa10f2c4013ac0bfe9c.tar.gz -i bash -p postgresql_11

export PGHOST=/data/postgresql

pg_ctl -D /data/postgresql -o "-k $PGHOST" -l logfile -w start


tail -F logfile
